<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %><br>

<%= f.submit 'Update Book' %>
<% end %>

<tr><%= link_to 'Show', book_path %></tr>
<tr><%= link_to 'Back', books_path %></tr>